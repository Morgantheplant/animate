{
  "name": "surf",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "start": "ecstatic -p 8000 public",
    "dev": "nodemon server.js & npm run watch",
    "watch": "npm run watch-css & npm run watch-js",
    "build": "npm run build-css & npm run build-js",
    "watch-js": "watchify index.js -t browserify-css -o public/bundle.js -dv",
    "watch-css": "catw -c 'lessc --clean-css -' 'styles/*.less' -o public/styles.min.css",
    "build-js": "NODE_ENV=production browserify -t browserify-css index.js | uglifyjs -cm > public/bundle.js",
    "build-css": "lessc --clean-css styles/index.less styles.min.css"
  },
  "author": "morgantheplant",
  "dependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.1",
    "browserify-css": "^0.8.4",
    "catw": "^1.0.1",
    "classnames": "^2.2.5",
    "ecstatic": "^1.4.0",
    "express": "^4.13.4",
    "express-handlebars": "^3.0.0",
    "http": "0.0.0",
    "less": "^2.6.1",
    "less-plugin-clean-css": "^1.5.1",
    "matter": "^0.2.0",
    "matter-js": "^0.10.0",
    "nodemon": "^1.9.2",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.4.0",
    "react-router": "^2.0.0",
    "redux": "^3.3.1",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  }
}
